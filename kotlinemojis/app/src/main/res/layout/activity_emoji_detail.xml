<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EmojiDetail" android:id="@+id/number">

    <TextView
            android:text="TextView"
            android:layout_width="291dp"
            android:layout_height="252dp"
            android:gravity="center"
            android:id="@+id/emojiDetailTextView"
            android:textColor="@android:color/black"
            android:textSize="150dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.506"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.19"/>
    <TextView
            android:text="TextView"
            android:gravity="center"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:id="@+id/number_view" android:textSize="50sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/emojiDetailTextView"/>

</android.support.constraint.ConstraintLayout>